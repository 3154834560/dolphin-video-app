<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.dolphin">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/dolphin_logo"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:usesCleartextTraffic="true"
        android:roundIcon="@mipmap/dolphin_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.Dolphin"
        tools:targetApi="31">
        <activity
            android:name=".activity.HomePageActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.LoginPageActivity" />
        <activity android:name=".activity.RegisterPageActivity" />
        <activity android:name=".activity.UploadPageActivity" />
        <activity android:name=".activity.MePageActivity" />
        <activity android:name=".activity.PersonIntroPage" />
        <activity android:name=".activity.MorePageActivity" />
        <activity android:name=".activity.AuthorInfoActivity" />
        <activity android:name=".activity.SingleVideoActivity" />
        <activity android:name=".activity.tools.calculate.CalculateActivity" />
        <activity android:name=".activity.tools.translate.TranslateActivity" />
        <activity android:name=".activity.tools.notepad.Add" />
        <activity android:name=".activity.tools.notepad.NotePadActivity" />
        <activity android:name=".activity.tools.hamster.HamsterActivity" />
        <activity android:name=".activity.tools.bmi.BMIActivity" />
        <activity android:name=".activity.tools.minesweeper.MinesweeperActivity" />
        <activity android:name=".activity.tools.minesweeper.LevelActivity" />
        <activity android:name=".activity.tools.minesweeper.ManuActivity" />
        <activity android:name=".activity.tools.guessNumber.BaseActivity" />
        <activity android:name=".activity.tools.guessNumber.GussNumberGame" />
        <activity android:name=".activity.tools.guessNumber.StartGame" />
    </application>

    <!--    &lt;!&ndash;    添加网络访问权限&ndash;&gt;-->
    <uses-permission
        android:name="android.permission.ACCESS_WIFI_STATE"
        tools:ignore="ManifestOrder" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
</manifest>