<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="DisableBaselineAlignment">

    <LinearLayout
        android:id="@+id/tool_1"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginStart="10dp"
        android:layout_weight="0.33"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/tool_image_1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.75"
            tools:ignore="ContentDescription,NestedWeights" />

        <TextView
            android:id="@+id/tool_name_1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.25"
            android:text="@string/zero"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="18sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/tool_2"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginStart="10dp"
        android:layout_weight="0.33"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/tool_image_2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.75"
            tools:ignore="ContentDescription,NestedWeights" />

        <TextView
            android:id="@+id/tool_name_2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.25"
            android:text="@string/zero"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="18sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/tool_3"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_weight="0.33"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/tool_image_3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.75"
            tools:ignore="ContentDescription,NestedWeights" />

        <TextView
            android:id="@+id/tool_name_3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.25"
            android:text="@string/zero"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>