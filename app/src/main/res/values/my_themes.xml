<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="JumpDialog" parent="@android:style/Theme.Dialog">
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- Dialog进入及退出动画 -->
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>
    <!-- ActionSheet进出动画 -->
    <style name="DialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/dialog_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_out</item>
    </style>

    <style name="register_style1">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:gravity">end|center_vertical</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_weight">0.3</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="register_style2">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">none</item>
        <item name="android:maxLength">15</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_weight">0.7</item>
    </style>

    <style name="register_style3">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="FontColorStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="t1_TextViewStyle1" parent="FontColorStyle">
        <item name="android:layout_width">50dp</item>
        <item name="android:textSize">35sp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">right</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="t1_ButtonStyle1" parent="FontColorStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">#16C2D8</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="t1_ButtonStyle2" parent="t1_ButtonStyle1">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TableRowStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="t1_TableRowStyle1" parent="TableRowStyle">
        <item name="android:gravity">center</item>
    </style>

    <style name="TableRowStyle2" parent="TableRowStyle">
        <item name="android:gravity">center</item>
    </style>

    <style name="textViewStyle1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/teal_200</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">45sp</item>
    </style>
    <style name="btn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@drawable/shape</item>
    </style>
</resources>