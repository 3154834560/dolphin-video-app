<?xml version="1.0" encoding="utf-8"?>
<network-security-config xmlns:tools="http://schemas.android.com/tools">
<!--    默认配置：允许明文通信-->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <!--信任系统证书-->
            <certificates
                overridePins="true"
                src="system" />
            <!--信任用户证书-->
            <certificates
                overridePins="true"
                src="user"
                tools:ignore="AcceptsUserCertificates" />
        </trust-anchors>
    </base-config>
</network-security-config>